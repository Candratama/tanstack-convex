{
  "name": "tanstack-convex-saas",
  "version": "1.0.0",
  "description": "A production-ready SaaS boilerplate built with TanStack, Convex, React, and TypeScript featuring user authentication, subscription management, and payment processing",
  "private": true,
  "type": "module",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/tanstack-convex-saas.git"
  },
  "keywords": [
    "saas",
    "tanstack",
    "convex",
    "react",
    "typescript",
    "boilerplate",
    "subscription",
    "payment"
  ],
  "scripts": {
    "dev": "npx convex dev --once && concurrently -r npm:dev:web npm:dev:convex",
    "dev:web": "vite dev",
    "dev:ts": "tsc -b -w",
    "dev:convex": "npx convex dev",
    "build": "vite build && tsc --noEmit",
    "start": "node .output/server/index.mjs",
    "format": "prettier --write .",
    "lint": "tsc && eslint .  --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@convex-dev/react-query": "^0.0.0-alpha.11",
